<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.blogxin.dt.client.log.repository.mybatis.mapper.ActionMapper">

    <resultMap id="baseResultMap" type="cn.blogxin.dt.client.log.repository.mybatis.mapper.ActionMapper">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="xid" property="xid" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <sql id="baseColumnList">
        id, xid, name, status, gmt_create, gmt_modified
    </sql>

    <insert id="insert">
        INSERT INTO
          dt.action
          (xid, name, status, gmt_create, gmt_modified)
        VALUES
          (#{xid}, #{name}, #{status}, #{gmtCreate}, #{gmtModified})
    </insert>

    <select id="query" parameterType="java.lang.String" resultMap="baseResultMap">
        SELECT
        <include refid="baseColumnList"/>
        FROM
        dt.action
        WHERE
        xid = #{xid}
    </select>

    <update id="updateStatus">
        UPDATE
        dt.action
        SET
        status=#{toStatus}, gmt_modified=NOW()
        WHERE
        xid = #{xid} and name=#{name} and status=#{fromStatus}
    </update>


</mapper>