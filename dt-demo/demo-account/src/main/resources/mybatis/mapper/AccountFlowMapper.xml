<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.blogxin.account.mapper.AccountFlowMapper">

    <resultMap id="BaseResultMap" type="cn.blogxin.account.entity.AccountFlowPO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="uid" property="uid" jdbcType="VARCHAR"/>
        <result column="order_id" property="orderId" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="amount" property="amount" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, uid, order_id, status, amount
    </sql>

    <select id="query" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        account_flow
        WHERE
        uid = #{uid}
    </select>

    <insert id="insert">
        INSERT INTO
          account_flow
          (uid,order_id,status,amount)
        VALUES
          (#{po.uid}, #{po.orderId}, #{po.status}, #{po.amount})
    </insert>

    <update id="updateStatus" parameterType="AccountFlowPO">
        UPDATE
          account_flow
        SET
          status = #{po.status}
        WHERE
          uid = #{po.uid} and order_id = #{po.orderId}
    </update>

</mapper>